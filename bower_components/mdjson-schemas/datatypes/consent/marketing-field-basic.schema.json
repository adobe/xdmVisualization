{
  "id": "_xdm.datatype.marketing-preference-field",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Generic Marketing Preference Field",
  "description": "This schema specifies the fields in a basic marketing preference object.",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:status": "stable",
  "meta:createdDate": "2021-03-19",
  "meta:xdmType": "object",
  "properties": {
    "val": {
      "title": "Choice Value",
      "description": "The value specified by the user as their preference or the basis of processing that precludes the need for user consent",
      "type": "string",
      "enum": [
        "y",
        "n",
        "p",
        "u",
        "dy",
        "dn",
        "LI",
        "CT",
        "CP",
        "VI",
        "PI"
      ],
      "meta:xdmType": "string",
      "meta:xdmField": "xdm:val",
      "tagNumber": 1
    },
    "time": {
      "title": "Preference timestamp",
      "description": "Date and time this specific preference was collected. This value should conform to ISO 8601 standard. An example form is \"2004-10-23T12:00:00-06:00\".",
      "type": "string",
      "format": "date-time",
      "meta:xdmType": "date-time",
      "meta:xdmField": "xdm:time",
      "tagNumber": 2
    },
    "reason": {
      "title": "Opt-out reason",
      "type": "string",
      "description": "Reason for opting out",
      "maxLength": 16,
      "meta:xdmType": "string",
      "meta:xdmField": "xdm:reason",
      "tagNumber": 3
    }
  },
  "meta:xdmId": "https://ns.adobe.com/xdm/datatype/marketing-preference-field",
  "meta:altId": "_xdm.datatype.marketing-preference-field",
  "required": [
    "val"
  ],
  "id": "_xdm.datatype.marketing-preference-field"
}
