{
  "id": "_xdm.datatypes.advertisingdetails",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Advertising details information",
  "type": "object",
  "meta:status": "experimental",
  "meta:extensible": true,
  "description": "Advertising details information.",
  "meta:xdmType": "object",
  "properties": {
    "name": {
      "title": "Ad Name",
      "type": "string",
      "description": "The friendly and human-readable name of the ad asset.",
      "meta:xdmType": "string",
      "meta:xdmField": "xdm:name",
      "tagNumber": 1
    },
    "ID": {
      "title": "Ad ID",
      "type": "string",
      "pattern": "^.{1,}$",
      "description": "Identifier of the ad asset provided by media analytics customers. Following the Ad-ID standard [https://www.ad-id.org].",
      "meta:xdmType": "string",
      "meta:xdmField": "xdm:ID",
      "tagNumber": 2
    },
    "length": {
      "title": "Ad Length Or Duration",
      "type": "integer",
      "description": "Length or duration of ad asset in seconds.",
      "meta:xdmType": "int",
      "meta:xdmField": "xdm:length",
      "tagNumber": 3
    },
    "podPosition": {
      "title": "Ad In Pod Position (Ad Start)",
      "type": "integer",
      "minimum": 0,
      "description": "The index of the ad inside the parent ad start, for example, the first ad has index 0 and the second ad has index 1.",
      "meta:xdmType": "int",
      "meta:xdmField": "xdm:podPosition",
      "tagNumber": 4
    },
    "playerName": {
      "title": "Ad Player Name",
      "type": "string",
      "description": "The name of the player responsible for rendering the ad.",
      "meta:xdmType": "string",
      "meta:xdmField": "xdm:playerName",
      "tagNumber": 5
    },
    "advertiser": {
      "title": "Ad Advertiser",
      "type": "string",
      "description": "Company/Brand whose product is featured in the ad.",
      "meta:xdmType": "string",
      "meta:xdmField": "xdm:advertiser",
      "tagNumber": 6
    },
    "campaignID": {
      "title": "Ad Campaign",
      "type": "string",
      "description": "ID of the ad campaign.",
      "meta:xdmType": "string",
      "meta:xdmField": "xdm:campaignID",
      "tagNumber": 7
    },
    "creativeID": {
      "title": "Ad Creative ID",
      "type": "string",
      "description": "The ID of the ad creative.",
      "meta:xdmType": "string",
      "meta:xdmField": "xdm:creativeID",
      "tagNumber": 8
    },
    "siteID": {
      "title": "Ad Site ID",
      "type": "string",
      "description": "ID of the ad site.",
      "meta:xdmType": "string",
      "meta:xdmField": "xdm:siteID",
      "tagNumber": 9
    },
    "creativeURL": {
      "title": "Ad Creative URL",
      "type": "string",
      "format": "uri",
      "description": "The URL of the ad creative.",
      "meta:xdmType": "string",
      "meta:xdmField": "xdm:creativeURL",
      "tagNumber": 10
    },
    "placementID": {
      "title": "Ad Placement ID",
      "type": "string",
      "description": "Placement ID of the ad.",
      "meta:xdmType": "string",
      "meta:xdmField": "xdm:placementID",
      "tagNumber": 11
    },
    "isCompleted": {
      "title": "Ad Completed",
      "type": "boolean",
      "description": "Ad is completed.",
      "meta:xdmType": "boolean",
      "meta:xdmField": "xdm:isCompleted",
      "tagNumber": 12
    },
    "isStarted": {
      "title": "Ad Started",
      "type": "boolean",
      "description": "Ad is started.",
      "meta:xdmType": "boolean",
      "meta:xdmField": "xdm:isStarted",
      "tagNumber": 13
    },
    "timePlayed": {
      "title": "Ad Time Played",
      "type": "integer",
      "description": "The total amount of time, in seconds, spent watching the ad (i.e., the number of seconds played).",
      "meta:xdmType": "int",
      "meta:xdmField": "xdm:timePlayed",
      "tagNumber": 14
    },
    "adBreakID": {
      "title": "Ad Break ID",
      "type": "string",
      "description": "The ID of the ad.",
      "meta:xdmType": "string",
      "meta:xdmField": "xdm:adBreakID",
      "tagNumber": 15
    }
  },
  "meta:xdmId": "https://ns.adobe.com/xdm/datatypes/advertisingDetails",
  "meta:altId": "_xdm.datatypes.advertisingdetails",
  "required": [
    "ID",
    "length",
    "podPosition",
    "playerName",
    "isCompleted",
    "isStarted",
    "timePlayed",
    "adBreakID"
  ],
  "id": "_xdm.datatypes.advertisingdetails"
}